{% extends 'base.html.twig' %}

{% block title %}{{ article.title }} - CB Automobiles{% endblock %}

{% block body %}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="py-3" style="background-color: var(--vw-gray);">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-decoration-none">Accueil</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Actualités</a></li>
            <li class="breadcrumb-item active">{{ article.title }}</li>
        </ol>
    </div>
</nav>

<!-- Article Hero -->
<section class="py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav class="mb-3">
                    <a href="#" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Retour aux actualités
                    </a>
                </nav>
                <h1 class="display-5 fw-bold mb-3">{{ article.title }}</h1>
                <p class="text-muted mb-4">
                    <i class="fas fa-calendar me-2"></i>{{ article.date|date('d F Y') }}
                    <span class="mx-3">|</span>
                    <i class="fas fa-user me-2"></i>Par l'équipe CB Automobiles
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Article Content -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <article>
                    <!-- Featured Image -->
                    <div class="mb-5">
                        <img src="{{ article.image }}" class="img-fluid rounded shadow" alt="{{ article.title }}">
                    </div>

                    <!-- Article Content -->
                    <div class="article-content">
                        <p class="lead">{{ article.content }}</p>
                        
