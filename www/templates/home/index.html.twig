{% extends 'base.html.twig' %}

{% block title %}CB Automobiles - Concessionnaire Automobile | Véhicules neufs et occasions{% endblock %}
{% block meta_description %}CB Automobiles, concessionnaire automobile officiel : découvrez nos véhicules neufs, occasions certifiées, services d'entretien et solutions de financement. Expertise et qualité garanties.{% endblock %}
{% block meta_keywords %}cb automobiles, concessionnaire auto, voiture neuve, occasion, golf, polo, tiguan, passat, entretien auto, financement auto{% endblock %}

{% block body %}

<!-- Hero Section -->
<section id="accueil" class="hero-section d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">CB Automobiles, votre partenaire automobile</h1>
                <p class="lead mb-4">Concessionnaire automobile de confiance. Explorez notre gamme complète de véhicules alliant innovation, qualité et performance.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="{{ path('app_occasion') }}" class="btn btn-vw-primary btn-lg">Voir nos véhicules</a>
                    <a href="{{ path('app_contact') }}" class="btn btn-outline-light btn-lg">Nous contacter</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://images.unsplash.com/photo-1559416523-140ddc3d238c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" 
                     class="img-fluid rounded shadow-lg" alt="CB Automobiles - Concession automobile moderne" loading="lazy">
            </div>
        </div>
    </div>
</section>

<!-- Véhicules Section -->
<section id="vehicules" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Nos véhicules populaires</h2>
                <p class="lead text-muted">Découvrez notre sélection de véhicules CB Automobiles</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card car-card h-100">
                    <img src="https://images.unsplash.com/photo-1542282088-fe8426682b8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         class="card-img-top" alt="CB Golf 8 - Compacte technologique" loading="lazy">
                    <div class="card-body">
                        <h3 class="card-title">Golf 8</h3>
                        <p class="card-text">La référence des compactes. Technologie avancée, confort optimal et performances exceptionnelles.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">À partir de 45 900 €</span>
                            <a href="{{ path('app_produit', {id: 1}) }}" class="btn btn-outline-primary">En savoir plus</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card car-card h-100">
                    <img src="https://images.unsplash.com/photo-1549924231-f129b911e442?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         class="card-img-top" alt="CB Tiguan SUV familial polyvalent" loading="lazy">
                    <div class="card-body">
                        <h3 class="card-title">Tiguan</h3>
                        <p class="card-text">SUV familial par excellence. Espace, polyvalence et sécurité pour toutes vos aventures.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">À partir de 32 400 €</span>
                            <a href="{{ path('app_produit', {id: 1}) }}" class="btn btn-outline-primary">En savoir plus</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card car-card h-100">
                    <img src="https://images.unsplash.com/photo-1593941707882-a5bac6861d75?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         class="card-img-top" alt="CB ID.4 SUV électrique" loading="lazy">
                    <div class="card-body">
                        <h3 class="card-title">ID.4</h3>
                        <p class="card-text">L'avenir de la mobilité électrique. Autonomie exceptionnelle et conduite silencieuse.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">À partir de 35 400 €</span>
                            <a href="{{ path('app_produit', {id: 1}) }}" class="btn btn-outline-primary">En savoir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="{{ path('app_occasion') }}" class="btn btn-vw-primary btn-lg">Voir tous nos véhicules</a>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Nos services</h2>
                <p class="lead text-muted">Un accompagnement complet pour votre véhicule</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6 col-sm-12 text-center">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <i class="fas fa-tools fa-3x text-primary mb-3"></i>
                        <h3 class="card-title">Entretien & Réparation</h3>
                        <p class="card-text">Services d'entretien et de réparation par nos techniciens certifiés.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 text-center">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <i class="fas fa-handshake fa-3x text-primary mb-3"></i>
                        <h3 class="card-title">Financement</h3>
                        <p class="card-text">Solutions de financement adaptées à votre budget et vos besoins.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 text-center">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                        <h3 class="card-title">Garantie</h3>
                        <p class="card-text">Garanties étendues pour une tranquillité d'esprit totale.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 text-center">
                <div class="card border-0 h-100">
                    <div class="card-body">
                        <i class="fas fa-exchange-alt fa-3x text-primary mb-3"></i>
                        <h3 class="card-title">Reprise</h3>
                        <p class="card-text">Estimation et reprise de votre véhicule actuel au meilleur prix.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- À propos Section -->
<section id="apropos" class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1562141961-aeec36ca9c39?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" 
                     class="img-fluid rounded shadow" alt="Notre concession">
            </div>
            <div class="col-lg-6">
                <h2 class="section-title">Votre concessionnaire de confiance</h2>
                <p class="text-muted mb-4">Depuis plus de 30 ans, nous accompagnons nos clients dans leur mobilité. Notre équipe d'experts vous propose un service personnalisé et des conseils adaptés à vos besoins.</p>
                <div class="row g-3 mb-4">
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span>Plus de 30 ans d'expérience</span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span>Équipe certifiée CB Automobiles</span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span>Service après-vente premium</span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <span>Pièces d'origine garanties</span>
                        </div>
                    </div>
                </div>
                <a href="{{ path('app_contact') }}" class="btn btn-vw-primary">Nous rencontrer</a>
            </div>
        </div>
    </div>
</section>

<!-- Témoignages Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Nos clients témoignent</h2>
                <p class="lead text-muted">Découvrez les avis de nos clients satisfaits</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card border-0 h-100 text-center">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <p class="card-text">"Excellent service client et équipe très professionnelle. Ma Golf 8 fonctionne parfaitement !"</p>
                        <footer class="blockquote-footer">Marie L.</footer>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 h-100 text-center">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <p class="card-text">"Très satisfait de mon Tiguan. L'équipe a su me conseiller selon mes besoins familiaux."</p>
                        <footer class="blockquote-footer">Pierre D.</footer>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 h-100 text-center">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <p class="card-text">"Passage à l'électrique facilité grâce à leur expertise. Mon ID.4 est fantastique !"</p>
                        <footer class="blockquote-footer">Sophie M.</footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Nous contacter</h2>
                <p class="lead text-muted">Prenez rendez-vous ou visitez notre showroom</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-map-marker-alt fa-2x text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-1">Adresse</h6>
                                    <p class="mb-0 text-muted">123 Avenue des Automobiles<br>75000 Paris</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-phone fa-2x text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-1">Téléphone</h6>
                                    <p class="mb-0 text-muted">01 23 45 67 89</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-envelope fa-2x text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-1">Email</h6>
                                    <p class="mb-0 text-muted">contact@cb-automobiles.fr</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title mb-4">Demande de renseignements</h3>
                        <form>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Nom" required>
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" placeholder="Prénom" required>
                                </div>
                                <div class="col-12">
                                    <input type="email" class="form-control" placeholder="Email" required>
                                </div>
                                <div class="col-12">
                                    <input type="tel" class="form-control" placeholder="Téléphone">
                                </div>
                                <div class="col-12">
                                    <select class="form-select">
                                        <option selected>Sujet de votre demande</option>
                                        <option>Information véhicule neuf</option>
                                        <option>Véhicule d'occasion</option>
                                        <option>Entretien/Réparation</option>
                                        <option>Financement</option>
                                        <option>Autre</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <textarea class="form-control" rows="4" placeholder="Votre message"></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-vw-primary w-100">Envoyer ma demande</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
